<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widget_margin"
                android:background="#fff">

    <!-- Headers / Toolbars -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:src="@color/light_blue_700"
        android:contentDescription="@string/empty"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:text="@string/app_name"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/widget_schedule_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_gravity="end"
        android:background="@drawable/ic_add_white_24dp"
        android:contentDescription="@string/empty"/>

    <ListView android:id="@+id/widget_list_view"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="36dp"
               android:divider="@color/grey_200"
               android:dividerHeight="1dp"
        />

    <TextView android:id="@+id/widget_empty_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="36dp"
              android:contentDescription="@string/empty"
              android:text="@string/empty"
              android:layout_gravity="center_horizontal|center_vertical"
              android:textColor="@color/grey_400"
              android:textStyle="bold"
              android:textSize="24sp" />
</FrameLayout>