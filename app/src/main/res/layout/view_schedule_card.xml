<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/schedule_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="@dimen/schedule_card_height"
                                    android:layout_margin="@dimen/spacing_small"
                                    card_view:cardBackgroundColor="@android:color/white"
                                    card_view:cardCornerRadius="@dimen/spacing_small">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schedule_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/light_blue_700"/>

        <TextView
            android:id="@+id/schedule_card_location"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/light_blue_300"
            />

        <TextView
            android:id="@+id/schedule_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/grey_400"/>

        <TextView
            android:id="@+id/schedule_card_desc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/grey_400"
            />
    </LinearLayout>

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:padding="@dimen/spacing_medium"
        />

</android.support.v7.widget.CardView>