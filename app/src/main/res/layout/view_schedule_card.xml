<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/schedule_card"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/schedule_card_height"
                                    android:layout_margin="@dimen/spacing_small"

                                    card_view:cardBackgroundColor="@android:color/white"
                                    card_view:cardCornerRadius="@dimen/spacing_small">

    <ImageView android:id="@+id/schedule_card_image"
               android:layout_width="@dimen/schedule_card_image_width"
               android:layout_height="match_parent"
               android:layout_gravity="start"
               android:contentDescription="@string/hello_world"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/schedule_card_image_width"
        android:layout_marginStart="@dimen/schedule_card_image_width"
        android:padding="@dimen/spacing_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schedule_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/light_blue_700"
            android:text="Title"/>

        <TextView
            android:id="@+id/schedule_card_location"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/light_blue_300"
            android:text="Location"
            />

        <TextView
            android:id="@+id/schedule_card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/grey_400"
            android:text="Time"/>

        <TextView
            android:id="@+id/schedule_card_desc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/grey_400"
            android:text="Desc"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>